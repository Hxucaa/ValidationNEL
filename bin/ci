#   eval "${WATCHOS_TEST_CMD} | xcpretty -c"
# else
  eval "$IOS_TEST_CMD"
  eval "$TVOS_TEST_CMD"
  eval "$MACOS_TEST_CMD"
  eval "$WATCHOS_TEST_CMD"
# fi
