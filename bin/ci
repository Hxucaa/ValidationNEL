#!/usr/bin/env bash

set -e

xctool -workspace ValidationNEL.xcworkspace -scheme ValidationNEL-iOS -sdk iphonesimulator9.3 build test

xctool -workspace ValidationNEL.xcworkspace -scheme ValidationNEL-tvOS -sdk appletvsimulator9.2 build test

xctool -workspace ValidationNEL.xcworkspace -scheme ValidationNEL-macOS -sdk macosx10.11 build

xctool -workspace ValidationNEL.xcworkspace -scheme ValidationNEL-watchOS -sdk watchsimulator2.2 build
